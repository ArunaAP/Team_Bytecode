<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bodyshapecalculatorhome">



        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                style="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#034c81"
                app:title=" Body Shape calculation"
                app:titleTextColor="@color/white" />
        </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="593dp"
        android:layout_height="541dp"
        app:layout_constraintBottom_toTopOf="@+id/CalculateMyBodyShapebtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fit" />

    <Button
        android:id="@+id/CalculateMyBodyShapebtn"
        android:layout_width="319dp"
        android:layout_height="59dp"
        android:layout_marginBottom="16dp"
        android:onClick="addBody"
        android:text="@string/CalculateMyBodyShapebtn"
        app:layout_constraintBottom_toTopOf="@+id/MyRecordssbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/MyRecordssbtn"
        android:layout_width="319dp"
        android:layout_height="59dp"
        android:layout_marginBottom="28dp"
        android:onClick="myRecords"
        android:text="@string/MyRecordssbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

















